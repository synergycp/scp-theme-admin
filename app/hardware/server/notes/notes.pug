include /resources/angle/pug/mixins/form

form.panel.panel-default(
  ng-submit="notes.save()"
  ng-class="notes.loader.class"
)
  .loader
  .panel-heading(ng-click="notes.isExpanded = !notes.isExpanded")
    h3.panel-title(translate="server.notes.TITLE")
    .btn-group.btn-group-xs.pull-right
      a.btn.btn-default
        span.fa(ng-class="notes.isExpanded ? 'fa-minus' : 'fa-plus'")
  .panel-body(ng-class="notes.isExpanded ? '' : 'hidden'")
    .form-group
      label.control-label(
        for="form-client-notes"
        translate="server.notes.CLIENT"
      )
      textarea.form-control(
        ng-model="notes.server.notes.client"
        id="form-client-notes"
      )

    .form-group
      label.control-label(
        for="form-admin-notes"
        translate="server.notes.ADMIN"
      )
      textarea.form-control(
        ng-model="notes.server.notes.admin"
        id="form-admin-notes"
      )
  .panel-footer.clearfix(ng-class="notes.isExpanded ? '' : 'hidden'")
    .pull-right
      button.btn.btn-primary(translate="server.notes.SUBMIT")
