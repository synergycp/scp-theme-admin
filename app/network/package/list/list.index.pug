extends /resources/angle/pug/list-page
include /resources/angle/pug/mixins/list

block list
  list.panel.panel-default(list="vm.list")
    list-header(text="package.list.TITLE")
      a.btn.btn-default(ng-click="vm.list.scrollToAnchor('package-edit-form')")
        i.fa.fa-plus
      a.btn.btn-default(ng-click="vm.list.refresh.now()")
        i.fa.fa-refresh
    package-table.border-top-table.scrollable-block
    list-footer