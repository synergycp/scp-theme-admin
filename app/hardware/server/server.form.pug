+label(
  "{{ 'server.form.billing.date.LABEL' | translate }}",
  "billing-date"
)
  +input-with-btn("fa fa-close")(
    ng-click="serverForm.billing.date.value = ''"
  )
    input.form-control(
      type="text"
      id="form-billing-date"
      date-range-picker=""
      options="serverForm.billing.date.options"
      ng-model="serverForm.billing.date.value"
      placeholder="{{ 'server.form.billing.date.PLACEHOLDER' | translate }}"
    )

